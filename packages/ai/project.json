{
  "root": "packages/ai",
  "sourceRoot": "packages/ai/src",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/ai",
        "main": "packages/ai/src/index.ts",
        "tsConfig": "packages/ai/tsconfig.lib.json",
        "assets": ["packages/ai/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/ai/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/ai"],
      "options": {
        "jestConfig": "packages/ai/jest.config.js",
        "passWithNoTests": true
      }
    },
    "publish": {
      "builder": "@nrwl/workspace:run-commands",
      "options": {
        "commands": [
          "cd packages/ai && npm version {args.version}",
          {
            "command": "yarn nx run ai:build --production",
            "forwardAllArgs": false
          },
          {
            "command": "cd dist/packages/ai && npm publish",
            "forwardAllArgs": false
          }
        ],
        "cwd": "./",
        "parallel": false
      }
    }
  },
  "tags": []
}
